@page "/VoiceAvatar"
@model VoiceAgentCSharp.Pages.VoiceAvatarModel
@using Microsoft.Extensions.Localization
@using System.Globalization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["VoiceAvatar"];
    var currentCulture = CultureInfo.CurrentCulture.Name;
}

<!DOCTYPE html>
<html lang="@currentCulture.Replace("-", "-").ToLowerInvariant()">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg">
    <link rel="stylesheet" href="~/theme.css" asp-append-version="true">
    <link rel="stylesheet" href="~/styles.css" asp-append-version="true">
    <style>
        /* Avatar-specific overrides to match Assistant layout */
        #avatarContainer {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 900px;
            height: 506px; /* 16:9 aspect ratio approx */
            max-width: 90vw;
            max-height: 50vh;
            background: var(--bg-secondary, #1a1a2e);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 0 40px rgba(139, 92, 246, 0.3);
            z-index: 10;
        }

        .avatar-video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .avatar-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.6);
            z-index: 20;
            transition: opacity 0.3s ease;
        }

        .avatar-overlay.hidden {
            opacity: 0;
            pointer-events: none;
        }

        .avatar-loading, .avatar-placeholder {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 16px;
            color: white;
        }

        .avatar-spinner {
            width: 48px;
            height: 48px;
            border: 4px solid rgba(255, 255, 255, 0.2);
            border-top-color: var(--theme-primary);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin { to { transform: rotate(360deg); } }

        /* Status badge positioning */
        .avatar-status {
            position: absolute;
            top: 16px;
            left: 16px;
            background: rgba(0, 0, 0, 0.5);
            padding: 6px 12px;
            border-radius: 20px;
            color: white;
            font-size: 0.8em;
            display: flex;
            align-items: center;
            gap: 8px;
            z-index: 30;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: #f39c12;
        }
        .status-dot.connected { background: #27ae60; }
        .status-dot.disconnected { background: #e74c3c; }
    </style>
</head>

<body>
    <div class="sun-flares">
        <div class="flare"></div>
        <div class="flare two"></div>
        <div class="flare three"></div>
    </div>
    <div class="main-container">
        <!-- Main Title -->
        <h1><span class="brand-l">Voice</span> <span class="brand-ia">Avatar</span></h1>

        <!-- Hamburger (Left) for mobile/compact menu -->
        <button id="hamburgerButton" class="hamburger-btn" title="@Localizer["OpenMenu"]" aria-label="@Localizer["OpenMenu"]">
            <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 6h18M3 12h18M3 18h18" stroke="currentColor" stroke-linecap="round"/>
            </svg>
        </button>

        <!-- Home Button -->
        <a href="/" class="home-btn" title="@Localizer["Home"]" aria-label="@Localizer["Home"]">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                <path d="M3 11.5L12 4l9 7.5V20a1 1 0 0 1-1 1h-5v-6H9v6H4a1 1 0 0 1-1-1v-8.5z" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
        </a>

        <!-- Top Right Controls -->
        <!-- Theme toggle button -->
        <button id="themeToggleButton" title="@Localizer["ToggleTheme"]" aria-label="@Localizer["ChangeTheme"]" class="theme-toggle-btn">
            <svg id="sunIcon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5"></circle>
                <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
            </svg>
            <svg id="moonIcon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
        </button>

        <!-- Logout button -->
        <a href="/Logout" class="logout-btn" title="@Localizer["Logout"]" aria-label="@Localizer["Logout"]">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" stroke-linecap="round" stroke-linejoin="round"></path>
                <polyline points="16 17 21 12 16 7" stroke-linecap="round" stroke-linejoin="round"></polyline>
                <line x1="21" y1="12" x2="9" y2="12" stroke-linecap="round" stroke-linejoin="round"></line>
            </svg>
        </a>

        <button id="chatToggle" class="chat-toggle" title="@Localizer["ToggleChat"]" aria-label="@Localizer["ToggleChat"]">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
        </button>

        <!-- Trace toggle (below chat button) -->
        <button id="traceToggle" class="trace-toggle-btn" title="@Localizer["ToggleTrace"]" aria-label="@Localizer["ToggleTraceMessages"]">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 3h18v18H3z" stroke="currentColor" stroke-width="2" fill="none" />
                <path d="M7 8h10M7 12h10M7 16h6" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
            </svg>
            <span class="trace-badge" id="traceBadge">0</span>
        </button>

        @if (User.IsInRole("Admin"))
        {
            <!-- Admin Dashboard Button -->
            <a href="/Admin/CallMonitoring" class="admin-btn" title="@Localizer["CallMonitoringDashboard"]" aria-label="@Localizer["CallMonitoringDashboard"]" target="_blank">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>
            </a>
        }

        <!-- Avatar Container -->
        <div id="avatarContainer">
            <div class="avatar-status">
                <span class="status-dot" id="avatarStatusDot"></span>
                <span id="avatarStatusText">@Localizer["NotConnected"]</span>
            </div>

            <video id="avatarVideo" class="avatar-video" autoplay playsinline muted></video>

            <div class="avatar-overlay" id="avatarOverlay">
                <div class="avatar-placeholder" id="avatarPlaceholder">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                        <circle cx="12" cy="8" r="4"></circle>
                        <path d="M4 20c0-4 4-7 8-7s8 3 8 7"></path>
                    </svg>
                    <span>@Localizer["ClickStartToBegin"]</span>
                </div>
                <div class="avatar-loading hidden" id="avatarLoading">
                    <div class="avatar-spinner"></div>
                    <span>@Localizer["Connecting"]</span>
                </div>
            </div>
        </div>

        <!-- Controls Bar (Aligned with VoiceAssistant) -->
        <div class="controls-bar">
            <button id="startButton" class="control-btn primary" title="@Localizer["StartSession"]">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="5 3 19 12 5 21 5 3"></polygon>
                </svg>
            </button>
            
            <button id="muteButton" class="control-btn muted" title="@Localizer["ToggleMicrophone"]">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path>
                    <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
                    <line x1="12" y1="19" x2="12" y2="23"></line>
                    <line x1="8" y1="23" x2="16" y2="23"></line>
                </svg>
            </button>

            <button id="settingsButton" class="control-btn" title="@Localizer["Settings"]">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="3"></circle>
                    <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                </svg>
            </button>
        </div>
    </div>

        <!-- Left Panel (Slideover) -->
        <nav id="leftPanel" class="left-panel" aria-hidden="true">
            <div class="left-panel-header">
                <h3>@Localizer["Menu"]</h3>
                <button id="closeLeftPanel" class="close-left-panel" title="@Localizer["CloseMenu"]" aria-label="@Localizer["CloseMenu"]">×</button>
            </div>
            <div class="left-panel-body" id="leftPanelBody">
                <a href="/" class="lp-btn" id="lp_home">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20"><path d="M3 11.5L12 4l9 7.5V20a1 1 0 0 1-1 1h-5v-6H9v6H4a1 1 0 0 1-1-1v-8.5z" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                    <span>@Localizer["Home"]</span>
                </a>
                <button class="lp-btn" id="lp_settingsButton">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19.14 12.94c.04-.31.06-.63.06-.94s-.02-.64-.06-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.11-.2-.36-.28-.57-.2l-2.39.96c-.5-.38-1.04-.7-1.64-.94l-.36-1.95c-.05-.21-.25-.36-.47-.36h-3.98c-.22 0-.42.15-.47.36l-.36 1.95c-.6.24-1.14.56-1.64.94l-2.39-.96c-.21-.08-.46 0-.57.2L2.71 8.88c-.11.2-.06.47.12.61l2.03 1.58c-.04.3-.06.61-.06.94s.02.64.06.94L2.83 14.5c-.18.14-.23.41-.12.61l1.92 3.32c.11.2.36.28.57.2l2.39-.96c.5.38 1.04.7 1.64.94l.36 1.95c.05.21.25.36.47.36h3.98c.22 0 .42-.15.47-.36l.36-1.95c.6-.24 1.14-.56 1.64-.94l2.39.96c.21.08.46 0 .57-.2l1.92-3.32c.11-.2.06-.47-.12-.61l-2.03-1.58z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                    <span>@Localizer["Settings"]</span>
                </button>
                <button class="lp-btn" id="lp_themeToggle">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5"></circle><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
                    <span>@Localizer["ChangeTheme"]</span>
                </button>
                <button class="lp-btn" id="lp_chatToggle">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
                    <span>@Localizer["ToggleChat"]</span>
                </button>
                <button class="lp-btn" id="lp_traceToggle">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 3h18v18H3z"/><path d="M7 8h10M7 12h10M7 16h6"/></svg>
                    <span>@Localizer["ToggleTrace"]</span>
                </button>
                @if (User.IsInRole("Admin"))
                {
                    <a href="/Admin/CallMonitoring" class="lp-btn" target="_blank">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>
                        <span>@Localizer["CallMonitoringDashboard"]</span>
                    </a>
                }
                <a href="/Logout" class="lp-btn" id="lp_logout">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" stroke-linecap="round" stroke-linejoin="round"></path><polyline points="16 17 21 12 16 7" stroke-linecap="round" stroke-linejoin="round"></polyline><line x1="21" y1="12" x2="9" y2="12" stroke-linecap="round" stroke-linejoin="round"></line></svg>
                    <span>@Localizer["Logout"]</span>
                </a>
            </div>
        </nav>

        <!-- Trace panel (bottom left) -->
        <div class="trace-panel" id="tracePanel">
            <div class="trace-header">
                <h3>@Localizer["TraceMessages"]</h3>
                <button id="clearTraceButton" class="clear-trace-btn" title="@Localizer["ClearTrace"]">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M3 6h18M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2m3 0v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6h14z"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </button>
            </div>
            <div id="traceContent" class="trace-content"></div>
        </div>

        <!-- Transcript Panel (Sliding from right) -->
        <div id="transcriptBox" class="transcript-box">
            <div class="transcript-header">
                <h3>@Localizer["Chat"]</h3>
                <button id="clearChatButton" class="clear-chat-btn" title="@Localizer["ClearChat"]"
                    aria-label="@Localizer["ClearChat"]">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M3 6h18M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2m3 0v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6h14z"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        </path>
                    </svg></button>
            </div>
            <div id="transcriptContent"></div>
            <!-- Monitoring Trace Panel -->
            <div id="monitoringTrace" style="padding: 10px; margin: 10px 0; background: rgba(37, 99, 235, 0.1); border-radius: 8px; font-size: 12px; font-family: monospace; display: none;">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:inline-block;vertical-align:middle;margin-right:4px;"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>
                <span id="traceInfo">Tokens: 0 | Input: $0.00 | Output: $0.00 | Total: $0.00</span>
            </div>
            <div class="text-input-row">
                <textarea id="textInput" placeholder="@Localizer["WriteAMessage"]" rows="1"></textarea>
                <button id="sendTextButton" title="@Localizer["SendMessage"]" aria-label="@Localizer["SendMessage"]">
                    <!-- Paper plane icon (send) - uses currentColor so theme controls color -->
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Settings Modal -->
    <div id="settingsModal" class="settings-modal">
        <div class="settings-content">
            <div class="settings-header">
                <h2>@Localizer["VoiceAvatarSettings"]</h2>
                <button id="closeSettingsButton" class="close-settings-btn" title="@Localizer["CloseSettings"]"
                    aria-label="@Localizer["CloseSettings"]">×</button>
            </div>
            <div class="settings-body">
                <div class="setting-group">
                    <label for="voiceLiveEndpointInput">@Localizer["VoiceLiveEndpoint"]</label>
                    <div class="input-group">
                        <input id="voiceLiveEndpointInput" class="form-control" type="url" inputmode="url"
                            placeholder="https://*.cognitiveservices.azure.com" aria-label="@Localizer["VoiceLiveEndpointURL"]" />
                    </div>
                    <span class="setting-hint">@Localizer["VoiceLiveEndpointHint"]</span>
                </div>
                <div class="setting-group">
                    <label for="voiceLiveApiKeyInput">@Localizer["VoiceLiveApiKey"]</label>
                    <div class="input-group">
                        <input id="voiceLiveApiKeyInput" class="form-control" type="password"
                            placeholder="@Localizer["EnterApiKey"]" />
                    </div>
                    <span class="setting-hint">@Localizer["VoiceLiveApiKeyHint"]</span>
                </div>
                <div class="setting-group">
                    <label for="voiceModelSelect">@Localizer["VoiceModel"]</label>
                    <select id="voiceModelSelect" class="form-control"></select>
                    <span class="setting-hint">@Localizer["SelectVoiceModel"]</span>
                </div>
                <div class="setting-group">
                    <label for="voiceSelect">@Localizer["Voice"]</label>
                    <select id="voiceSelect" class="form-control"></select>
                    <span class="setting-hint">@Localizer["SelectVoice"]</span>
                </div>
                
                <!-- Avatar Specific Settings -->
                <div class="setting-group avatar-selection-grid">
                    <div>
                        <label for="avatarCharacterSelect">@Localizer["AvatarCharacter"]</label>
                        <select id="avatarCharacterSelect" class="form-control">
                            <option value="harry">Harry</option>
                            <option value="jeff">Jeff</option>
                            <option value="lisa">Lisa</option>
                            <option value="lori">Lori</option>
                            <option value="max">Max</option>
                            <option value="meg">Meg</option>
                        </select>
                        <span class="setting-hint">@Localizer["SelectAvatarCharacter"]</span>
                    </div>

                    <div>
                        <label for="avatarStyleSelect">@Localizer["AvatarStyle"]</label>
                        <select id="avatarStyleSelect" class="form-control">
                            <!-- Populated dynamically by voice-avatar.js based on character -->
                        </select>
                        <span class="setting-hint">@Localizer["SelectAvatarStyle"]</span>
                    </div>

                    <div class="avatar-preview-area">
                        <label>@Localizer["Preview"]</label>
                        <div class="avatar-preview-card">
                            <img id="avatarPreviewImage" src="/media/placeholder.png" alt="@Localizer["AvatarPreviewAlt"]" style="max-width:100%;height:auto;border-radius:8px;" />
                        </div>
                        <div class="setting-hint">@Localizer["AvatarPreviewHint"]</div>
                    </div>

                    <div class="avatar-gestures-area">
                        <label>@Localizer["AvailableGestures"]</label>
                        <div id="avatarGesturesList" class="gestures-list">@Localizer["GesturesHint"]</div>
                    </div>
                </div>

                <div class="setting-group">
                    <label for="welcomeMessageInput">@Localizer["WelcomeMessage"]</label>
                    <textarea id="welcomeMessageInput" class="form-control" rows="3"
                        placeholder="@Localizer["WelcomeMessageHint"]"></textarea>
                    <span class="setting-hint">@Localizer["WelcomeMessageHint"]</span>
                </div>
                <div class="setting-group">
                    <label for="modelInstructionsInput">@Localizer["ModelInstructions"]</label>
                    <textarea id="modelInstructionsInput" class="form-control" rows="5"
                        placeholder="@Localizer["ModelInstructionsHint"]"></textarea>
                    <span class="setting-hint">@Localizer["ModelInstructionsHint"]</span>
                </div>

                <div class="setting-group">
                    <label for="toastNotificationsToggle"><input id="toastNotificationsToggle" type="checkbox" />@Localizer["ShowNotifications"]</label>

                </div>
            </div>
            <div class="settings-footer">
                <button id="saveSettingsButton" class="save-settings-btn" title="@Localizer["SaveSettings"]">@Localizer["Save"]</button>
            </div>
        </div>
    </div>

    <!-- Error Boundary -->
    <div id="errorBoundary" class="error-boundary">
        <div class="error-content">
            <h2>@Localizer["ApplicationError"]</h2>
            <p id="errorMessage"></p>
            <button id="reloadButton" title="@Localizer["ReloadPage"]">@Localizer["ReloadPage"]</button>
        </div>
    </div>

    <div id="toastContainer" class="toast-container"></div>

    <script type="module" src="~/js/handlers/voice-avatar.js?v=1.0.3" asp-append-version="true"></script>
</body>
</html>
