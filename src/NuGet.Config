<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Ensure builds in Linux containers don't try to use Windows-specific fallback package folders -->
  <config>
    <!-- Put the global packages folder inside the container's filesystem -->
    <add key="globalPackagesFolder" value="/root/.nuget/packages" />
  </config>

  <!-- Explicitly clear fallbackPackageFolders so absolute Windows paths from user/machine configs
       are not attempted during containerized builds -->
  <fallbackPackageFolders />
</configuration>
